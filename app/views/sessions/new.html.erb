<h1>ログイン</h1>

<%= render partial: 'layouts/flash' %>

<%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>

  <div>
  <%= f.label :email %>
  <%= f.email_field :email %>
  </div>

  <div>
  <%= f.label :password %>
  <%= f.password_field :password %>
  </div>

  <div>
  <%= f.submit "ログイン" %>
  </div>
<% end %>